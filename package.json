{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "addons/*"
    ]
  },
  "scripts": {
    "start": "yarn workspace app dev",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "test": "yarn build && lerna run test --since origin/master -- --coverage",
    "test:all": "yarn build && lerna run test -- --coverage",
    "lint": "lerna run lint --since origin/master --",
    "lint:all": "lerna run lint --",
    "dev:all": "lerna run dev --parallel",
    "dev:app": "lerna run dev --scope @aginix/app",
    "dev:backend": "lerna run dev --scope @aginix/backend",
    "storybook": "yarn workspace @aginix/core storybook",
    "storybook:build": "yarn workspace @aginix/core storybook:build",
    
    "lerna": "lerna"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --config ./prettier.config.js  --list-different --write"
    ]
  }
}
